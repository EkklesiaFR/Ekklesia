
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * EKKLESIA VOTE SECURITY RULES
     * Version: 1.8 - Explicit Public Access for Public Sessions
     */

    // --- HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- COLLECTION RULES ---

    /**
     * @description Public session data: Read allowed for EVERYONE.
     * Crucial for the homepage to function without authentication.
     */
    match /publicVotingSessions/{sessionId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description User Profiles: Users manage their own; admins see all.
     */
    match /userProfiles/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow create, update: if isOwner(userId);
      allow list, delete: if isAdmin();
    }
    
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow create, update: if isOwner(userId);
      allow list, delete: if isAdmin();
    }

    /**
     * @description Secure Ballot: One ballot per session per user.
     */
    match /ballots/{ballotId} {
      allow get: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin());
      allow list: if isAdmin();
      allow create: if isSignedIn()
        && request.auth.uid == request.resource.data.userId
        && ballotId == request.resource.data.sessionId + "_" + request.auth.uid;
      allow update, delete: if false; 
    }

    /**
     * @description Admin role lookups.
     */
    match /roles_admin/{userId} {
      allow get: if isSignedIn();
      allow list, write: if isAdmin();
    }

    /**
     * @description Email Allowlist: Read for signed-in members; management for admins.
     */
    match /emailAllowlist/{emailEntryId} {
      allow get, list: if isSignedIn();
      allow write: if isAdmin();
    }

    /**
     * @description Sessions and Projects: Read for signed-in members; management for admins.
     */
    match /votingSessions/{sessionId} {
      allow get, list: if isSignedIn();
      allow write: if isAdmin();

      match /projects/{projectId} {
        allow get, list: if isSignedIn();
        allow write: if isAdmin();
      }
    }

    /**
     * @description Voting Results: Immutable from client.
     */
    match /votingResults/{sessionId} {
      allow get, list: if isSignedIn();
      allow write: if false; 
    }
  }
}
