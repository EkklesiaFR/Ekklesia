
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * EKKLESIA VOTE SECURITY RULES
     * Pattern: Composite IDs {sessionId}_{uid} for ballots to enforce one-vote-per-session.
     */

    // --- HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- COLLECTION RULES ---

    match /userProfiles/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * @description Secure voting pattern using composite IDs.
     * Enforces: one ballot per session per user, creation only, authenticated ownership.
     */
    match /ballots/{ballotId} {
      allow get: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin());
      allow list: if isAdmin();
      allow create: if isSignedIn()
        && request.auth.uid == request.resource.data.userId
        && ballotId == request.resource.data.sessionId + "_" + request.auth.uid;
      allow update, delete: if false;
    }

    match /roles_admin/{userId} {
      allow get: if isSignedIn();
      allow list: if isAdmin();
      allow create, update, delete: if isAdmin();
    }

    match /emailAllowlist/{emailEntryId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isAdmin();
    }

    match /votingSessions/{sessionId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if isAdmin();

      match /projects/{projectId} {
        allow get, list: if isSignedIn();
        allow create, update, delete: if isAdmin();
      }
    }

    match /votingResults/{sessionId} {
      allow get, list: if isSignedIn();
      allow create, update, delete: if false;
    }

    match /publicVotingSessions/{sessionId} {
      allow get, list: if true;
      allow create, update, delete: if isAdmin();
    }
  }
}
