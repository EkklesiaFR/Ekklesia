rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isMemberActive() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/members/$(request.auth.uid))
        && get(/databases/$(database)/documents/members/$(request.auth.uid)).data.status == "active";
    }

    function isAdminActive() {
      return isMemberActive() 
        && get(/databases/$(database)/documents/members/$(request.auth.uid)).data.role == "admin";
    }

    match /members/{uid} {
      allow get: if isSignedIn() && (request.auth.uid == uid || isAdminActive());
      allow list: if isAdminActive();
      
      // Bootstrap : Permettre à l'utilisateur de créer son profil initial SANS fixer son rôle ou statut
      allow create: if isSignedIn() && request.auth.uid == uid 
                    && !request.resource.data.keys().hasAny(['role', 'status']);
      
      // Update Safe : Permettre à l'utilisateur de mettre à jour ses infos personnelles sans toucher aux droits
      allow update: if isSignedIn() && request.auth.uid == uid
                    && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'status']);

      // Les admins gèrent les privilèges (role, status)
      allow update, delete: if isAdminActive();
    }

    match /assemblies/{assemblyId} {
      allow read: if isSignedIn();
      allow update: if isAdminActive();

      match /members/{uid} {
        allow read: if isSignedIn() && (request.auth.uid == uid || isAdminActive());
        allow write: if isAdminActive();
      }

      match /public/{docId} {
        allow read: if true;
        allow write: if isAdminActive();
      }

      match /votes/{voteId} {
        allow read: if isMemberActive();
        allow write: if isAdminActive();

        match /ballots/{uid} {
          allow get, write: if isSignedIn() && request.auth.uid == uid && get(/databases/$(database)/documents/assemblies/$(assemblyId)/votes/$(voteId)).data.state == "open";
          allow list: if isAdminActive();
        }
      }
    }

    match /projects/{projectId} {
      allow read: if isSignedIn();
      allow write: if isAdminActive(); 
    }
  }
}