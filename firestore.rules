rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function getMemberData() {
      return get(/databases/$(database)/documents/members/$(request.auth.uid)).data;
    }

    function isMemberActive() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/members/$(request.auth.uid))
        && getMemberData().status == "active";
    }

    function isAdminActive() {
      return isMemberActive() 
        && getMemberData().role == "admin";
    }

    match /members/{uid} {
      allow get: if isSignedIn() && (request.auth.uid == uid || isAdminActive());
      allow list: if isAdminActive();
      
      // Sécurité Bootstrap : Un utilisateur ne peut créer son profil qu'avec le statut en attente et le rôle membre.
      allow create: if isSignedIn() && request.auth.uid == uid 
                    && request.resource.data.role == "member"
                    && request.resource.data.status == "pending";
      
      // Un utilisateur ne peut mettre à jour que ses infos de base, jamais ses privilèges.
      allow update: if isSignedIn() && request.auth.uid == uid
                    && request.resource.data.role == resource.data.role
                    && request.resource.data.status == resource.data.status;

      // Seul un admin actif peut modifier les rôles ou révoquer des accès.
      allow update, delete: if isAdminActive();
    }

    match /assemblies/{assemblyId} {
      allow read: if isSignedIn();
      allow update: if isAdminActive() && (!("results" in resource.data) || resource.data.results == null);

      match /members/{uid} {
        allow read: if isSignedIn() && (request.auth.uid == uid || isAdminActive());
        allow write: if isAdminActive();
      }

      match /public/{docId} {
        allow read: if true;
        allow write: if isAdminActive();
      }

      match /votes/{voteId} {
        allow read: if isMemberActive();
        // Protection des résultats : une fois le vote verrouillé, plus de modifications possibles.
        allow update: if isAdminActive() && resource.data.state != "locked";
        allow write: if isAdminActive();

        match /ballots/{uid} {
          // Un membre ne peut voter que si le scrutin est ouvert.
          allow get, write: if isSignedIn() && request.auth.uid == uid 
                          && get(/databases/$(database)/documents/assemblies/$(assemblyId)/votes/$(voteId)).data.state == "open";
          allow list: if isAdminActive();
        }
      }
    }

    match /projects/{projectId} {
      allow read: if isSignedIn();
      allow create: if isMemberActive();
      allow update, delete: if isAdminActive() || (isSignedIn() && request.auth.uid == resource.data.ownerUid && resource.data.status == "submitted");
    }
  }
}