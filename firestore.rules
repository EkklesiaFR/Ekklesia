rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getMemberData() {
      return get(/databases/$(database)/documents/members/$(request.auth.uid)).data;
    }

    // Un admin est défini par son rôle.
    // On ne vérifie pas le status == "active" ici pour permettre à un premier admin 
    // d'accéder à la console même s'il est encore en attente de validation.
    function isAdmin() {
      return isSignedIn() 
        && exists(/databases/$(database)/documents/members/$(request.auth.uid))
        && getMemberData().role == "admin";
    }

    function isMemberActive() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/members/$(request.auth.uid))
        && getMemberData().status == "active";
    }

    // Pour les actions métier (créer des votes), on exige que l'admin soit actif.
    function isAdminActive() {
      return isMemberActive() && getMemberData().role == "admin";
    }

    match /members/{uid} {
      // Un utilisateur peut lire son propre doc. Un admin peut tout lire (get + list).
      allow get: if isOwner(uid) || isAdmin();
      allow list: if isAdmin();
      
      // Création initiale : toujours pending/member par défaut.
      allow create: if isOwner(uid) 
        && request.resource.data.status == "pending" 
        && request.resource.data.role == "member";
        
      // Seul un admin peut changer le rôle ou le statut.
      // Un utilisateur peut mettre à jour ses propres infos (email, name, login).
      allow update: if isAdmin() 
        || (isOwner(uid) 
            && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'status', 'createdAt', 'id'])
           );
           
      allow delete: if isAdmin();
    }

    match /projects/{projectId} {
      allow read: if isMemberActive();
      allow write: if isAdminActive();
    }

    match /assemblies/{assemblyId} {
      allow read: if isMemberActive();
      allow write: if isAdminActive();

      match /votes/{voteId} {
        allow read: if isMemberActive();
        allow write: if isAdminActive();

        match /ballots/{uid} {
          allow get: if isOwner(uid) || isAdminActive();
          allow list: if isAdminActive();

          function isValidBallotRequest() {
            let vote = get(/databases/$(database)/documents/assemblies/$(assemblyId)/votes/$(voteId)).data;
            return isMemberActive()
              && uid == request.auth.uid
              && vote.state == "open"
              && request.resource.data.keys().hasOnly(['ranking', 'castAt', 'updatedAt']);
          }

          allow create: if isValidBallotRequest();
          allow update: if isValidBallotRequest();
          allow delete: if false;
        }
      }
    }
  }
}