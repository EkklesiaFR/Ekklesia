rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getMemberData(assemblyId) {
      return get(/databases/$(database)/documents/assemblies/$(assemblyId)/members/$(request.auth.uid)).data;
    }

    function isMemberActive(assemblyId) {
      return isSignedIn()
        && exists(/databases/$(database)/documents/assemblies/$(assemblyId)/members/$(request.auth.uid))
        && getMemberData(assemblyId).status == "active";
    }

    function isAdminActive(assemblyId) {
      return isMemberActive(assemblyId) && getMemberData(assemblyId).role == "admin";
    }

    // Vérifie si l'utilisateur est admin dans l'assemblée par défaut pour autoriser la création globale
    function isGlobalAdmin() {
      let defaultPath = /databases/$(database)/documents/assemblies/default-assembly/members/$(request.auth.uid);
      return isSignedIn() && exists(defaultPath) && get(defaultPath).data.role == "admin" && get(defaultPath).data.status == "active";
    }

    function isVoteOpen(assemblyId, voteId) {
      return get(/databases/$(database)/documents/assemblies/$(assemblyId)/votes/$(voteId)).data.state == "open";
    }

    // Accès restreint aux anciens profils (lecture seule propriétaire)
    match /members/{uid} {
      allow get: if isOwner(uid);
      allow list, write: if false;
    }

    match /assemblies/{assemblyId} {
      allow read: if isSignedIn();
      
      // On autorise l'update uniquement si on est admin de cette assemblée
      allow update, delete: if isAdminActive(assemblyId);
      
      // On n'autorise plus la création d'assemblies aléatoires par les clients
      allow create: if false;

      match /members/{uid} {
        allow get: if isOwner(uid) || isAdminActive(assemblyId);
        allow list: if isAdminActive(assemblyId); 
        
        allow create: if isOwner(uid) 
          && request.resource.data.role == "member"
          && request.resource.data.status == "pending"
          && request.resource.data.keys().hasOnly(['id', 'role', 'status', 'email', 'createdAt', 'updatedAt', 'displayName']);
          
        allow update: if isAdminActive(assemblyId) 
          || (isOwner(uid) 
              && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['displayName', 'updatedAt'])
             );
             
        allow delete: if isAdminActive(assemblyId);
      }

      match /public/{docId} {
        allow read: if isSignedIn();
        allow write: if isAdminActive(assemblyId);
      }

      match /votes/{voteId} {
        allow read: if isMemberActive(assemblyId);
        allow create, update, delete: if isAdminActive(assemblyId);

        match /ballots/{uid} {
          allow get: if isOwner(uid) || isAdminActive(assemblyId);
          allow list: if isAdminActive(assemblyId); 

          function ballotValid() {
            let data = request.resource.data;
            return data.ranking is list 
              && data.ranking.size() > 0
              && data.castAt is timestamp
              && data.updatedAt is timestamp
              && data.keys().hasOnly(['ranking', 'castAt', 'updatedAt']);
          }

          allow create: if isMemberActive(assemblyId) 
            && isOwner(uid) 
            && isVoteOpen(assemblyId, voteId)
            && ballotValid();
            
          allow update: if isMemberActive(assemblyId) 
            && isOwner(uid) 
            && isVoteOpen(assemblyId, voteId)
            && ballotValid()
            && request.resource.data.castAt == resource.data.castAt;

          allow delete: if false;
        }
      }
    }

    match /projects/{projectId} {
      allow read: if isSignedIn(); 
      allow write: if isSignedIn();
    }
  }
}
