
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * EKKLESIA VOTE SECURITY RULES
     * Version: 1.7 - Explicit Public Access for Homepage Results
     */

    // --- HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- COLLECTION RULES ---

    /**
     * @description Données de session publiques : Lecture autorisée pour TOUS.
     * Crucial pour l'affichage de la page d'accueil sans connexion.
     */
    match /publicVotingSessions/{sessionId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    /**
     * @description Profils utilisateurs : Les utilisateurs gèrent leurs propres données ; les admins voient tout.
     */
    match /userProfiles/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow create, update: if isOwner(userId);
      allow list, delete: if isAdmin();
    }
    
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow create, update: if isOwner(userId);
      allow list, delete: if isAdmin();
    }

    /**
     * @description Vote sécurisé : Un seul bulletin par session et par utilisateur.
     */
    match /ballots/{ballotId} {
      allow get: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin());
      allow list: if isAdmin();
      allow create: if isSignedIn()
        && request.auth.uid == request.resource.data.userId
        && ballotId == request.resource.data.sessionId + "_" + request.auth.uid;
      allow update, delete: if false; 
    }

    /**
     * @description Recherche des rôles administratifs.
     */
    match /roles_admin/{userId} {
      allow get: if isSignedIn();
      allow list, write: if isAdmin();
    }

    /**
     * @description Liste d'autorisation e-mail : Lecture pour les membres identifiés ; gestion par les admins.
     */
    match /emailAllowlist/{emailEntryId} {
      allow get, list: if isSignedIn();
      allow write: if isAdmin();
    }

    /**
     * @description Sessions et Projets : Lecture pour les membres identifiés ; gestion par les admins.
     */
    match /votingSessions/{sessionId} {
      allow get, list: if isSignedIn();
      allow write: if isAdmin();

      match /projects/{projectId} {
        allow get, list: if isSignedIn();
        allow write: if isAdmin();
      }
    }

    /**
     * @description Résultats de vote : Immuables depuis le client.
     */
    match /votingResults/{sessionId} {
      allow get, list: if isSignedIn();
      allow write: if false; 
    }
  }
}
