rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * EKKLESIA VOTE SECURITY RULES
     * Version: 1.3 - Public Access for Home Results
     */

    // --- HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- COLLECTION RULES ---

    /**
     * @description Public session data: Read-only for everyone (including unauthenticated).
     * This is required for the homepage "Derniers projets financ√©s" section.
     */
    match /publicVotingSessions/{sessionId} {
      allow get, list: if true;
      allow write: if isAdmin();
    }

    /**
     * @description User profiles: Users manage their own data; Admins view all.
     */
    match /userProfiles/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow create, update: if isOwner(userId);
      allow list, delete: if isAdmin();
    }
    
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow create, update: if isOwner(userId);
      allow list, delete: if isAdmin();
    }

    /**
     * @description Secure voting: One ballot per session per user, creation only.
     * Enforces the {sessionId}_{userId} document ID pattern.
     */
    match /ballots/{ballotId} {
      allow get: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin());
      allow list: if isAdmin();
      allow create: if isSignedIn()
        && request.auth.uid == request.resource.data.userId
        && ballotId == request.resource.data.sessionId + "_" + request.auth.uid;
      allow update, delete: if false; // Votes are final once cast
    }

    /**
     * @description Administrative roles lookup.
     */
    match /roles_admin/{userId} {
      allow get: if isSignedIn();
      allow list, write: if isAdmin();
    }

    /**
     * @description Email allowlist: Authenticated users can read; Admins manage.
     */
    match /emailAllowlist/{emailEntryId} {
      allow get, list: if isSignedIn();
      allow write: if isAdmin();
    }

    /**
     * @description Sessions and Projects: Authenticated users can read; Admins manage.
     */
    match /votingSessions/{sessionId} {
      allow get, list: if isSignedIn();
      allow write: if isAdmin();

      match /projects/{projectId} {
        allow get, list: if isSignedIn();
        allow write: if isAdmin();
      }
    }

    /**
     * @description Voting results: Immutable from the client.
     */
    match /votingResults/{sessionId} {
      allow get, list: if isSignedIn();
      allow write: if false; 
    }
  }
}