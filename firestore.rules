
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * EKKLESIA VOTE SECURITY RULES
     * Enforces strict data isolation for members and administrative control.
     */

    // --- HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- COLLECTION RULES ---

    /**
     * @description User profiles: Users can manage their own data; Admins can view all.
     */
    match /userProfiles/{userId} {
      allow get, create, update: if isOwner(userId);
      allow list, delete: if isAdmin();
    }

    /**
     * @description Secure voting: One ballot per session per user, creation only.
     */
    match /ballots/{ballotId} {
      allow get: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin());
      allow list: if isAdmin();
      allow create: if isSignedIn()
        && request.auth.uid == request.resource.data.userId
        && ballotId == request.resource.data.sessionId + "_" + request.auth.uid;
      allow update, delete: if false; // Votes are final once cast
    }

    /**
     * @description Administrative roles lookup.
     */
    match /roles_admin/{userId} {
      allow get: if isSignedIn();
      allow list, write: if isAdmin();
    }

    /**
     * @description Email allowlist: Authenticated users can read; Admins manage.
     */
    match /emailAllowlist/{emailEntryId} {
      allow get, list: if isSignedIn();
      allow write: if isAdmin();
    }

    /**
     * @description Sessions and Projects: Authenticated users can read; Admins manage.
     */
    match /votingSessions/{sessionId} {
      allow get, list: if isSignedIn();
      allow write: if isAdmin();

      match /projects/{projectId} {
        allow get, list: if isSignedIn();
        allow write: if isAdmin();
      }
    }

    /**
     * @description Voting results: Immutable from the client (managed by backend).
     */
    match /votingResults/{sessionId} {
      allow get, list: if isSignedIn();
      allow write: if false; // Managed exclusively via Admin SDK
    }

    /**
     * @description Public session data: Read-only for all (for homepage preview).
     * This collection is specifically denormalized for unauthenticated public access.
     */
    match /publicVotingSessions/{sessionId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
