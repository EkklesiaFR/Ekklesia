rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FONCTIONS DE VÉRIFICATION ---

    function isSignedIn() {
      return request.auth != null;
    }

    function getMemberData() {
      return get(/databases/$(database)/documents/members/$(request.auth.uid)).data;
    }

    function isMemberActive() {
      return isSignedIn() && exists(/databases/$(database)/documents/members/$(request.auth.uid)) 
             && getMemberData().status == "active";
    }

    function isAdminActive() {
      return isMemberActive() && getMemberData().role == "admin";
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // --- RÈGLES DES COLLECTIONS ---

    // Profils membres
    match /members/{uid} {
      allow get: if isSignedIn() && (isOwner(uid) || isAdminActive());
      allow list: if isAdminActive();
      allow write: if isAdminActive();
    }

    // Assemblées et Votes
    match /assemblies/{assemblyId} {
      allow read: if isMemberActive();
      allow write: if isAdminActive();

      match /votes/{proposalId} {
        allow read: if isMemberActive();
        allow write: if isAdminActive();

        // Bulletins de vote
        match /ballots/{uid} {
          allow get: if isOwner(uid) || isAdminActive();
          allow list: if isAdminActive();
          
          allow create: if isMemberActive()
            && uid == request.auth.uid
            && !exists(request.path)
            && get(/databases/$(database)/documents/assemblies/$(assemblyId)/votes/$(proposalId)).data.state == "open"
            && request.time >= get(/databases/$(database)/documents/assemblies/$(assemblyId)/votes/$(proposalId)).data.opensAt
            && request.time <= get(/databases/$(database)/documents/assemblies/$(assemblyId)/votes/$(proposalId)).data.closesAt;
            
          allow update, delete: if false;
        }
      }
    }

    // Compatibilité avec les anciennes collections (optionnel, selon besoin)
    match /publicVotingSessions/{sessionId} {
      allow read: if true;
      allow write: if isAdminActive();
    }
  }
}