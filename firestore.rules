rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getMemberData() {
      return get(/databases/$(database)/documents/members/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isSignedIn() 
        && exists(/databases/$(database)/documents/members/$(request.auth.uid))
        && getMemberData().role == "admin";
    }

    function isMemberActive() {
      return isSignedIn()
        && exists(/databases/$(database)/documents/members/$(request.auth.uid))
        && getMemberData().status == "active";
    }

    function isAdminActive() {
      return isMemberActive() && getMemberData().role == "admin";
    }

    match /members/{uid} {
      allow get: if isOwner(uid) || isAdmin();
      allow list: if isAdmin();
      
      allow create: if isOwner(uid) 
        && request.resource.data.status == "pending" 
        && request.resource.data.role == "member";
        
      allow update: if isAdmin() 
        || (isOwner(uid) 
            && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'status', 'createdAt', 'id'])
           );
           
      allow delete: if isAdmin();
    }

    match /projects/{projectId} {
      allow read: if isMemberActive();
      allow write: if isAdminActive();
    }

    match /assemblies/{assemblyId} {
      allow read: if isMemberActive();
      allow write: if isAdminActive();

      match /votes/{voteId} {
        allow read: if isMemberActive();
        
        function isMemberTallyUpdate() {
          let vote = get(/databases/$(database)/documents/assemblies/$(assemblyId)/votes/$(voteId)).data;
          let affected = request.resource.data.diff(resource.data).affectedKeys();
          return isMemberActive() 
            && vote.state == "open"
            && (
              (affected.hasOnly(['ballotCount', 'updatedAt']) && request.resource.data.ballotCount == resource.data.ballotCount + 1)
              || (affected.hasOnly(['updatedAt']))
            );
        }

        allow update: if isAdminActive() 
          && request.resource.data.diff(resource.data).affectedKeys().hasOnly([
            'state', 'results', 'closedAt', 'updatedAt', 'publishedAt', 
            'lockedAt', 'ballotCount', 'eligibleCount', 'openedAt'
          ])
          || isMemberTallyUpdate();

        allow create: if isAdminActive();
        allow delete: if isAdminActive();

        match /ballots/{uid} {
          allow get: if isOwner(uid) || isAdminActive();
          allow list: if isAdminActive(); 

          function isVoteOpen() {
            return get(/databases/$(database)/documents/assemblies/$(assemblyId)/votes/$(voteId)).data.state == "open";
          }

          allow create: if isMemberActive() 
            && uid == request.auth.uid 
            && isVoteOpen() 
            && request.resource.data.keys().hasOnly(['ranking', 'castAt', 'updatedAt']);
            
          allow update: if isMemberActive() 
            && uid == request.auth.uid 
            && isVoteOpen() 
            && request.resource.data.keys().hasOnly(['ranking', 'updatedAt']);

          allow delete: if false;
        }
      }
    }
  }
}