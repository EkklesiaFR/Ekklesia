rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- FONCTIONS DE VÉRIFICATION ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getMemberData() {
      return get(/databases/$(database)/documents/members/$(request.auth.uid)).data;
    }

    function isMemberActive() {
      return isSignedIn() && exists(/databases/$(database)/documents/members/$(request.auth.uid)) 
             && getMemberData().status == "active";
    }

    function isAdminActive() {
      return isMemberActive() && getMemberData().role == "admin";
    }

    // --- RÈGLES DES COLLECTIONS ---

    // Profils membres
    match /members/{uid} {
      allow get: if isSignedIn() && (isOwner(uid) || isAdminActive());
      allow list: if isAdminActive();
      allow write: if isAdminActive();
    }

    // Projets
    match /projects/{projectId} {
      allow read: if isMemberActive();
      allow write: if isAdminActive();
    }

    // Assemblées et Votes
    match /assemblies/{assemblyId} {
      allow read: if isMemberActive();
      allow write: if isAdminActive();

      match /votes/{proposalId} {
        allow read: if isMemberActive();
        allow write: if isAdminActive();

        // Bulletins de vote
        match /ballots/{uid} {
          allow get: if isOwner(uid) || isAdminActive();
          allow list: if isAdminActive();
          
          function isValidBallotRequest() {
            let vote = get(/databases/$(database)/documents/assemblies/$(assemblyId)/votes/$(proposalId)).data;
            return isMemberActive()
              && uid == request.auth.uid
              && vote.state == "open"
              && request.resource.data.keys().hasOnly(['ranking', 'castAt', 'updatedAt']);
          }

          allow create: if isValidBallotRequest() && !exists(request.path);
          allow update: if isValidBallotRequest();
          allow delete: if false;
        }
      }
    }

    // Compatibilité avec les anciennes collections
    match /publicVotingSessions/{sessionId} {
      allow read: if true;
      allow write: if isAdminActive();
    }
  }
}