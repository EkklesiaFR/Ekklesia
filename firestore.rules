rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getMemberData(assemblyId) {
      return get(/databases/$(database)/documents/assemblies/$(assemblyId)/members/$(request.auth.uid)).data;
    }

    function isMemberActive(assemblyId) {
      return isSignedIn()
        && exists(/databases/$(database)/documents/assemblies/$(assemblyId)/members/$(request.auth.uid))
        && getMemberData(assemblyId).status == "active";
    }

    function isAdminActive(assemblyId) {
      return isMemberActive(assemblyId) && getMemberData(assemblyId).role == "admin";
    }

    // LEGACY: Support for root members collection during migration
    match /members/{uid} {
      allow get: if isOwner(uid) || (isSignedIn() && exists(/databases/$(database)/documents/assemblies/default-assembly/members/$(request.auth.uid)) && get(/databases/$(database)/documents/assemblies/default-assembly/members/$(request.auth.uid)).data.role == "admin");
      allow list: if false; 
    }

    match /assemblies/{assemblyId} {
      allow read: if isSignedIn(); // Allow reading assembly metadata to find the right one
      allow write: if isAdminActive(assemblyId);

      match /members/{uid} {
        allow get: if isOwner(uid) || isAdminActive(assemblyId);
        allow list: if isAdminActive(assemblyId);
        
        allow create: if isOwner(uid) 
          && request.resource.data.status == "pending" 
          && request.resource.data.role == "member";
          
        allow update: if isAdminActive(assemblyId) 
          || (isOwner(uid) 
              && !request.resource.data.diff(resource.data).affectedKeys().hasAny(['role', 'status', 'createdAt', 'id'])
             );
             
        allow delete: if isAdminActive(assemblyId);
      }

      match /public/{docId} {
        allow read: if isMemberActive(assemblyId);
        allow write: if isAdminActive(assemblyId);
      }

      match /votes/{voteId} {
        allow read: if isMemberActive(assemblyId);
        allow write: if isAdminActive(assemblyId);

        match /ballots/{uid} {
          allow get: if isOwner(uid) || isAdminActive(assemblyId);
          allow list: if isAdminActive(assemblyId); 

          function isVoteOpen() {
            return get(/databases/$(database)/documents/assemblies/$(assemblyId)/votes/$(voteId)).data.state == "open";
          }

          allow create: if isMemberActive(assemblyId) 
            && uid == request.auth.uid 
            && isVoteOpen();
            
          allow update: if isMemberActive(assemblyId) 
            && uid == request.auth.uid 
            && isVoteOpen();

          allow delete: if false;
        }
      }
    }

    match /projects/{projectId} {
      allow read: if isSignedIn(); 
      allow write: if isSignedIn();
    }
  }
}