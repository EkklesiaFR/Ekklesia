rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getMemberData(assemblyId) {
      return get(/databases/$(database)/documents/assemblies/$(assemblyId)/members/$(request.auth.uid)).data;
    }

    function isMemberActive(assemblyId) {
      return isSignedIn()
        && exists(/databases/$(database)/documents/assemblies/$(assemblyId)/members/$(request.auth.uid))
        && getMemberData(assemblyId).status == "active";
    }

    function isAdminActive(assemblyId) {
      return isMemberActive(assemblyId) && getMemberData(assemblyId).role == "admin";
    }

    function isVoteOpen(assemblyId, voteId) {
      return get(/databases/$(database)/documents/assemblies/$(assemblyId)/votes/$(voteId)).data.state == "open";
    }

    // PROTECTION DES ANCIENNES DONNÉES (LEGACY)
    match /members/{uid} {
      allow get: if isOwner(uid);
      allow list: if false; 
      allow write: if false;
    }

    match /assemblies/{assemblyId} {
      allow read: if isSignedIn();
      allow write: if isAdminActive(assemblyId);

      match /members/{uid} {
        allow get: if isOwner(uid) || isAdminActive(assemblyId);
        allow list: if isAdminActive(assemblyId);
        
        // Création : membre pending uniquement + whitelist stricte
        allow create: if isOwner(uid) 
          && request.resource.data.role == "member"
          && request.resource.data.status == "pending"
          && request.resource.data.keys().hasOnly(['id', 'role', 'status', 'email', 'createdAt', 'updatedAt', 'displayName', 'lastLoginAt']);
          
        // Mise à jour : Admin complet ou Owner restreint
        allow update: if isAdminActive(assemblyId) 
          || (isOwner(uid) 
              && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['displayName', 'updatedAt'])
             );
             
        allow delete: if isAdminActive(assemblyId);
      }

      match /public/{docId} {
        allow read: if isMemberActive(assemblyId);
        allow write: if isAdminActive(assemblyId);
      }

      match /votes/{voteId} {
        allow read: if isMemberActive(assemblyId);
        allow write: if isAdminActive(assemblyId);

        match /ballots/{uid} {
          allow get: if isOwner(uid) || isAdminActive(assemblyId);
          allow list: if isAdminActive(assemblyId); 

          allow create: if isMemberActive(assemblyId) 
            && uid == request.auth.uid 
            && isVoteOpen(assemblyId, voteId)
            && request.resource.data.keys().hasOnly(['ranking', 'createdAt', 'updatedAt']);
            
          allow update: if isMemberActive(assemblyId) 
            && uid == request.auth.uid 
            && isVoteOpen(assemblyId, voteId)
            && request.resource.data.keys().hasOnly(['ranking', 'createdAt', 'updatedAt'])
            && request.resource.data.createdAt == resource.data.createdAt;

          allow delete: if false;
        }
      }
    }

    match /projects/{projectId} {
      allow read: if isSignedIn(); 
      allow write: if isSignedIn();
    }
  }
}