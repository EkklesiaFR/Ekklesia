rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isMemberActive(assemblyId) {
      return isSignedIn()
        && exists(/databases/$(database)/documents/assemblies/$(assemblyId)/members/$(request.auth.uid))
        && get(/databases/$(database)/documents/assemblies/$(assemblyId)/members/$(request.auth.uid)).data.status == "active";
    }

    function isAdminActive(assemblyId) {
      return isMemberActive(assemblyId) 
        && get(/databases/$(database)/documents/assemblies/$(assemblyId)/members/$(request.auth.uid)).data.role == "admin";
    }

    match /assemblies/{assemblyId} {
      allow read: if isSignedIn();
      allow update: if isAdminActive(assemblyId);

      match /members/{uid} {
        allow get: if isSignedIn() && (request.auth.uid == uid || isAdminActive(assemblyId));
        allow list: if isAdminActive(assemblyId);
        
        // Autoriser l'utilisateur à créer son propre profil initial comme 'pending' et 'member'
        allow create: if isSignedIn() && request.auth.uid == uid 
                      && request.resource.data.role == "member"
                      && request.resource.data.status == "pending";
        
        // Seuls les admins peuvent valider les profils ou changer les rôles
        allow update, delete: if isAdminActive(assemblyId);
      }

      match /public/{docId} {
        allow read: if true;
        allow write: if isAdminActive(assemblyId);
      }

      match /votes/{voteId} {
        allow read: if isMemberActive(assemblyId);
        allow write: if isAdminActive(assemblyId);

        match /ballots/{uid} {
          allow get, write: if isSignedIn() && request.auth.uid == uid && get(/databases/$(database)/documents/assemblies/$(assemblyId)/votes/$(voteId)).data.state == "open";
          allow list: if isAdminActive(assemblyId);
        }
      }
    }

    match /projects/{projectId} {
      allow read: if isSignedIn();
      allow write: if isAdminActive('default-assembly'); 
    }
  }
}